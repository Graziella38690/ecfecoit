{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block body %}



<div class="container-fluid container-lg text-center">
<div class="row">
      <div class="col-xs-12" id="title">
       {% if is_granted('ROLE_TEACHER') %} 
      <a href="{{ path('app_lesson_index') }}"class="btn btn-Vine" role="button">retour</a>
       {% endif %}
       {% if is_granted('ROLE_LAERNING') %} 
       <a href="{{ path('app_section_show',{'id': section.id}) }}"class="btn btn-Vine" role="button">Retour</a>
       {% endif %}
        <h1>Détail de la leçon n° {{lesson.Id }}</h1>
      </div>
      </div>
    <div class="row">
      <div class="col-xs-12">
       <h2> Titre :</h2> <h4> {{ lesson.Title }}</h4>
      </div>
    </div>


 <div class="row">
      <div class="col-xs-12">
       <h3> Résumer:</h3><h4>{{ lesson.textlesson }}</h4>
      </div>
    </div>

<div class="row">
      <div class="col-xs-12">
       <h3>Fait partit de la section:</h3>
       <h4>{{ lesson.containedIn }}</h4>
      </div>
    </div>


    <div class="row">
      <div class="col-xs-12">
       <h3>Document:</h3>
       <h4>{{ lesson.ressources ? lesson.ressources|join(', ') : '' }}</h4>
      </div>
    </div>
    {% for ressource in lesson.ressources %}
    <iframe src="{{ asset('uploads/resources/' ~ ressource ) }}" width="100%" height="100%" > </iframe>
    {% endfor %}
     {% if is_granted('ROLE_TEACHER') %} 
    <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}"class="btn btn-Vine" role="button">Modifier</a>

    {{ include('lesson/_delete_form.html.twig') }}
      {% endif %}
{% endblock %}



 

 

