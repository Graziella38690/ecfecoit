{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container ">
    <h1>Register</h1>
{{ form_start(teacherForm) }}
      
        {{ form_row(teacherForm.firstname) }}
        {{ form_row(teacherForm.lastname)   }}
      
    
    
      
        {{ form_row(teacherForm.email) }}
        {{ form_row(teacherForm.plainPassword, {
            label: 'Password'
        }) }}
