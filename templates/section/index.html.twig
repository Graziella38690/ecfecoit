{% extends 'base.html.twig' %}

{% block title %}Mes Section{% endblock %}

{% block body %}
  
<div class="container-fluid container-lg vh-100">
<div class= "row text-center">
<div class="col-12">
<a href="{{ path('app_teacher_index') }}"class="btn btn-Vine" role="button">retour</a>
</div>
</div>
<div class="col-12" >
    <h1>Mes sections</h1>
<a href="{{ path('app_section_new') }}"class="btn btn-Vine" role="button">Ajouter une section</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Formation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td><h2>{{ section.id }}</h2></td>
                <td>{{ section.Title }}</td>
                <td>{{ section.containedIn }}</td>
                <td>
                    <a href="{{ path('app_section_show', {'id': section.id}) }}"class="btn btn-Vine mb-2" role="button">Voir</a>
                    <a href="{{ path('app_section_edit', {'id': section.id}) }}"class="btn btn-Vine mb-2" role="button">Modifier</a>
                  
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
         <a href="{{ path('app_section_new') }}">Create new</a>
    </table>
</div>
   
{% endblock %}
