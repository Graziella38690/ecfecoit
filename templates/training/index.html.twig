{% block body %}
<main>
  
 <div class="container text-center">
<div class="col-xs-12" id="title">
        <h1>Nos formations</h1>
      </div>
  <aside class="col-3">
            <div class="row">
              <img class="col-8" >
            </div>
          </aside>
        </section>
        <section class="row ">
          <img class="col-8" >
        </section>
      </div>
      <div class="container">
        <section class="row">
        
          <div class="col-12 actuformation">
          
